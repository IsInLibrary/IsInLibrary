{
    "name": "IsInLibrary",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "장바구니에 책을 담을때 책이 근처 도서관에 알려주는 확장 프로그램",
    "homepage_url": "https://github.com/IsInLibrary/IsInLibrary",
    "icons": {},
    "action": {},
    "browser_action": {
        "default_title": "TSRWPCX",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["src/js/background.bundle.js"],
        "persistent": true
    },
    "permissions": ["https://*/*", "activeTab", "storage"],
    "web_accessible_resources": [
        "src/js/background.bundle.js",
        "src/js/content.bundle.js",
        "src/js/popup.bundle.js"
    ],
    "content_security_policy": "style-src 'self' 'unsafe-inline' script-src 'self' 'unsafe-inline';",
    "content_scripts": [{
        "matches": ["https://*/*"],
        "js": [
            "src/js/background.bundle.js",
            "src/js/content.bundle.js",
            "src/js/popup.bundle.js"
        ]
    }]
}